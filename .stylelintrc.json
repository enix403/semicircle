{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "layer"]
      }
    ],

    "function-no-unknown": null,
    "comment-empty-line-before": null,
    "declaration-empty-line-before": null
  }
}
